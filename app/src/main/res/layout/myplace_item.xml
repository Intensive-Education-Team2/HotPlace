<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/myfavCard1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="horizontal">



                <androidx.cardview.widget.CardView
                    android:id="@+id/my_fav_card"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/my_place_image"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/garosugil" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/myplaceimage1_relative_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/my_place_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="left"
                            android:text="가로수길"
                            android:textColor="@color/colorStrongViolet"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/my_place_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="30dp"
                            android:text="신사역 주변"
                            android:textColor="@color/colorGrey"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/my_place_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginBottom="16dp"
                            android:text="4.2km"
                            android:textColor="@color/colorGrey"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/my_place_star"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"

                        android:src="@drawable/ic_bookmarked_strongpink" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>











    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>