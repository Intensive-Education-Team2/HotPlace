<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/placeinfo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/placeinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingRight="8dp"
        android:text="이름"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/placeinfo_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeinfo_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="거리"
        app:layout_constraintStart_toEndOf="@+id/placeinfo_img"
        app:layout_constraintTop_toBottomOf="@+id/placeinfo_name" />

    <TextView
        android:id="@+id/placeinfo_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="상세보기"
        app:layout_constraintStart_toEndOf="@+id/placeinfo_img"
        app:layout_constraintTop_toTopOf="@+id/placeinfo_distance" />



</androidx.constraintlayout.widget.ConstraintLayout>