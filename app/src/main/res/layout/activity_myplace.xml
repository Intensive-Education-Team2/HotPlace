<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/HotplerToolbarTheme">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/ToolbarText" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/myfavTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorStrongPink"
            android:text="My 플레이스" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:id="@+id/myfavCard1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/myfavCardImg1"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/myplaceimage1"
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/garosugil" />
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/myplaceimage1_relative_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/myplacename1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="left"
                                android:text="가로수길"
                                android:textColor="@color/colorStrongViolet"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/myplace_nickname1"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="30dp"
                                android:text="신사역 주변"
                                android:textColor="@color/colorGrey"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/myplace_distance1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="28dp"
                                android:layout_marginBottom="16dp"
                                android:text="4.2km"
                                android:textColor="@color/colorGrey"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/myplace_star1"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="6dp"
                            android:layout_weight="1"

                            android:src="@drawable/ic_bookmarked_strongpink" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/myfavCard2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:padding="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/myfavCardImg2"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/myplaceimage2"
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/silim" />
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/myplaceimage2_relative_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/myplacename2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="left"
                                android:text="신림"
                                android:textColor="@color/colorStrongViolet"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/myplace_nickname2"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="30dp"
                                android:text="신림,  샤로수길, 서울대, 낙성대"
                                android:textColor="@color/colorGrey"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/myplace_distance2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="28dp"
                                android:layout_marginBottom="16dp"
                                android:text="9.1km"
                                android:textColor="@color/colorGrey"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/myplace_star2"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="6dp"
                            android:layout_weight="1"

                            android:src="@drawable/ic_bookmarked_strongpink" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>