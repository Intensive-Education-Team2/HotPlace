<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/HotplerToolbarTheme" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintBottom_toTopOf="@+id/imageHere3"
                        app:layout_constraintTop_toTopOf="@+id/imageHere3">

                        <ImageView
                            android:id="@+id/imageViewDistance"
                            android:layout_width="0dp"
                            android:layout_height="7dp"
                            android:layout_marginStart="39dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="39dp"
                            android:layout_marginBottom="22dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewHereDistance3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/imageHere3"
                            app:srcCompat="@drawable/distance" />

                        <ImageView
                            android:id="@+id/imageViewMe"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_marginStart="33dp"
                            android:layout_marginTop="29dp"
                            android:layout_marginEnd="82dp"
                            android:layout_marginBottom="28dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewHereDistance1"
                            app:layout_constraintEnd_toStartOf="@+id/imageHere3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/me" />

                        <ImageView
                            android:id="@+id/imageHere1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="59dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageHere2"
                            app:layout_constraintEnd_toStartOf="@+id/imageHere2"
                            app:layout_constraintStart_toEndOf="@+id/imageHere3"
                            app:layout_constraintTop_toTopOf="@+id/imageHere2"
                            app:srcCompat="@drawable/here" />

                        <ImageView
                            android:id="@+id/imageHere2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="21dp"
                            android:layout_marginEnd="52dp"
                            android:layout_marginBottom="28dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewHereDistance3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageHere1"
                            app:layout_constraintTop_toTopOf="@+id/textViewHereName3"
                            app:srcCompat="@drawable/here" />

                        <ImageView
                            android:id="@+id/imageHere3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="104dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageViewMe"
                            app:layout_constraintEnd_toStartOf="@+id/imageHere1"
                            app:layout_constraintStart_toEndOf="@+id/imageViewMe"
                            app:layout_constraintTop_toTopOf="@+id/imageHere1"
                            app:srcCompat="@drawable/here" />

                        <TextView
                            android:id="@+id/textViewHereName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="65dp"
                            android:text="TextView"
                            app:layout_constraintEnd_toStartOf="@+id/textViewHereName2"
                            app:layout_constraintStart_toStartOf="@+id/imageHere3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewHereName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="2dp"
                            android:text="TextView"
                            app:layout_constraintBottom_toTopOf="@+id/imageHere1"
                            app:layout_constraintEnd_toStartOf="@+id/textViewHereName3"
                            app:layout_constraintStart_toEndOf="@+id/textViewHereName1" />

                        <TextView
                            android:id="@+id/textViewHereName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="32dp"
                            android:text="TextView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageHere2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewHereDistance1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:text="TextView"
                            app:layout_constraintStart_toStartOf="@+id/imageHere3"
                            app:layout_constraintTop_toBottomOf="@+id/textViewHereName1" />

                        <TextView
                            android:id="@+id/textViewHereDistance2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="22dp"
                            android:text="TextView"
                            app:layout_constraintEnd_toStartOf="@+id/textViewHereDistance3"
                            app:layout_constraintStart_toStartOf="@+id/imageHere1"
                            app:layout_constraintTop_toBottomOf="@+id/imageViewDistance" />

                        <TextView
                            android:id="@+id/textViewHereDistance3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:text="TextView"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewHereDistance1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageHere2"
                            app:layout_constraintTop_toTopOf="@+id/textViewHereDistance1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="핫플 TOP 5"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="더보기 >"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="430dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="5dp">

                                <ImageView
                                    android:id="@+id/imageViewRank1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/gangnam" />

                                <TextView
                                    android:id="@+id/textViewRank1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|right"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="강남"
                                    android:theme="@style/Top12Text" />

                            </androidx.cardview.widget.CardView>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="5dp">

                                    <ImageView
                                        android:id="@+id/imageViewRank2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/garosugil" />

                                    <TextView
                                        android:id="@+id/textViewRank2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|right"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="가로수길"
                                        android:theme="@style/Top12Text" />
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="430dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="5dp">

                                    <ImageView
                                        android:id="@+id/imageViewRank3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/gyunglidangil" />

                                    <TextView
                                        android:id="@+id/textViewRank3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|right"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="경리단길"
                                        android:theme="@style/Top345Text" />
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="5dp">

                                    <ImageView
                                        android:id="@+id/imageViewRank4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/habjung" />

                                    <TextView
                                        android:id="@+id/textViewRank4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|right"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="합정"
                                        android:theme="@style/Top345Text" />
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="5dp">

                                    <ImageView
                                        android:id="@+id/imageViewRank5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/silim" />

                                    <TextView
                                        android:id="@+id/textViewRank5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|right"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="신림"
                                        android:theme="@style/Top345Text" />
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewRecommand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="추천 핫플레이스"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="더보기 >"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/Linearrecommand1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/recommand1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="1."
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/recommand1name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="TextView"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <View
                                android:id="@+id/view2"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:background="@color/colorLightGrey" />

                            <LinearLayout
                                android:id="@+id/Linearrecommand2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/recommand2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="2."
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/recommand2name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="TextView"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <View
                                android:id="@+id/view3"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:background="@color/colorLightGrey" />

                            <LinearLayout
                                android:id="@+id/Linearrecommand3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/recommand3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="3."
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/recommand3name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="TextView"
                                    android:textSize="18dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_not_login_menu" />

</androidx.drawerlayout.widget.DrawerLayout>