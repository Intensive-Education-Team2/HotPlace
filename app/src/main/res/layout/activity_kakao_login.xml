<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo_Hotpler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hotpler" />

        <TextView
            android:id="@+id/Hotpler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotpler"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPink3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_kakao_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="50dp"
            android:background="@drawable/kakao_login_medium_wide"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>